# https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{kt,kts}]
max_line_length = 120
ktlint_standard_argument-list-wrapping = disabled
ktlint_standard_no-wildcard-imports = disabled
